{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "lib": ["ES2021.String", "ES7", "DOM"],
    "resolveJsonModule": true,
    "typeRoots": ["src/types/*/**"],
    "types": ["node", "mocha", "chai", "sinon"]
  },
  "include": ["src/**/*"],
  "files": ["src/types/index.d.ts"]
}
